@model CardView

@{
    ViewData["Title"] = @Model.DisplayName;
}

    <section id="headerSection">
        <h1>@Model.DisplayName</h1>
    </section>

<hr />

<section id="bodySection" style="width:100%">

    <section id="leftBodySection" style="width:50%; float:left">

        <section id="year">
            <label class="FormLabel" asp-for="@Model.Year"></label>
            <div class="FormValue">@Model.Year</div>

            <div class="Clear"></div>
        </section>

        <section id="company">
            <label class="FormLabel" asp-for="@Model.Company"></label>
            <div class="FormValue">@Model.Company</div>

            <div style="clear:both"></div>
        </section>

        <section id="sport">
            <label class="FormLabel" asp-for="@Model.SportName"></label>
            <div class="FormValue">@Model.SportName</div>

            <div style="clear:both"></div>
        </section>
        <section id="league">
            <label class="FormLabel" asp-for="@Model.LeagueName"></label>
            <div class="FormValue">@Model.LeagueName</div>

            <div style="clear:both"></div>
        </section>

        <section id="cardNumber">
            <label class="FormLabel" asp-for="@Model.CardNumber"></label>
            <div class="FormValue">@Model.CardNumber</div>

            <div style="clear:both"></div>
        </section>

        <section id="cardType">
            <label class="FormLabel" asp-for="@Model.CardType"></label>
            <div class="FormValue">@Model.CardType</div>

            <div style="clear:both"></div>
        </section>

        <br />

        <section id="person">
            <label class="FormLabel" asp-for="@Model.PersonName"></label>
            <a class="FormValue" asp-area="" asp-controller="People" asp-action="Details" asp-route-id=@Model.PersonId>@Model.PersonName</a>

            <div style="clear:both"></div>
        </section>

        <section id="team">
            <label class="FormLabel" asp-for="@Model.TeamName"></label>
            <a class="FormValue" asp-area="" asp-controller="Teams" asp-action="Details" asp-route-id=@Model.TeamId>@Model.TeamName</a>

            <div style="clear:both"></div>
        </section>

        <br />

        <section id="attributes">
            <label class="FormLabel" asp-for="@Model.Attributes"></label>
            <div class="FormValue">

                <ul>
                    @foreach (var itm in Model.Attributes)
                    {
                        <li>@itm</li>
                    }
                </ul>
            </div>

            <div style="clear:both"></div>
        </section>

        <br />

        <section id="grade">
            <label class="FormLabel" asp-for="@Model.Grade"></label>
            <div class="FormValue">

                <div class="FormValue">@Model.Grade</div>
            </div>

            <div style="clear:both"></div>
        </section>

        <br />

        <section id="cost">
            <label class="FormLabel" asp-for="@Model.FormattedCost"></label>
            <div class="FormValue">@Model.FormattedCost</div>

            <div style="clear:both"></div>
        </section>
        <section id="value">
            <label class="FormLabel" asp-for="@Model.FormattedValue"></label>
            <div class="FormValue">@Model.FormattedValue</div>

            <div style="clear:both"></div>
        </section>


    </section>

    <section id="rightBodySection" style="width:50%; float:left">

        <section id="importSubjectType">
            <label class="FormLabel" asp-for="@Model.ImportSubjectType"></label>
            <div class="FormValue">@Model.ImportSubjectType</div>

            <div style="clear:both"></div>
        </section>
        <section id="importLastName">
            <label class="FormLabel" asp-for="@Model.ImportLastName"></label>
            <div class="FormValue">@Model.ImportLastName</div>

            <div style="clear:both"></div>
        </section>
        <section id="importFirstName">
