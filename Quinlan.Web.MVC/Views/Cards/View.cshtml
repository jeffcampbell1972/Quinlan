            <div class="FormValue">@Model.ImportCardNumber</div>

            <div style="clear:both"></div>
        </section>
        <section id="importDescription">
            <label class="FormLabel" asp-for="@Model.ImportDescription"></label>
            <div class="FormValue">@Model.ImportDescription</div>

            <div style="clear:both"></div>
        </section>
        <section id="importTeam">
