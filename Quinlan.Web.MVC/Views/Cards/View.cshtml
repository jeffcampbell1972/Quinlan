            <div style="clear:both"></div>
        </section>
        <section id="importX2">
            <label class="FormLabel" asp-for="@Model.ImportX2"></label>
            <div class="FormValue">@Model.ImportX2</div>

            <div style="clear:both"></div>
        </section>
        <section id="importGrade">
            <label class="FormLabel" asp-for="@Model.ImportGrade"></label>
            <div class="FormValue">@Model.ImportGrade</div>

            <div style="clear:both"></div>
        </section>
        <section id="importX3">
            <label class="FormLabel" asp-for="@Model.ImportX3"></label>
            <div class="FormValue">@Model.ImportX3</div>

            <div style="clear:both"></div>
        </section>
        <section id="importType">
            <label class="FormLabel" asp-for="@Model.ImportType"></label>
            <div class="FormValue">@Model.ImportType</div>

            <div style="clear:both"></div>
        </section>
        <section id="importLeague">
            <label class="FormLabel" asp-for="@Model.ImportLeague"></label>
            <div class="FormValue">@Model.ImportLeague</div>

            <div style="clear:both"></div>
        </section>
        <section id="importNotableFlag">
            <label class="FormLabel" asp-for="@Model.ImportNotableFlag"></label>
            <div class="FormValue">@Model.ImportNotableFlag</div>

            <div style="clear:both"></div>
        </section>

    </section>

    <div style="clear:both"></div>
</section>

