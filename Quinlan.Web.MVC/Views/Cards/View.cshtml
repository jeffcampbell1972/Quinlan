            <div class="FormValue">@Model.ImportBeckett</div>

            <div style="clear:both"></div>
        </section>
        <section id="importValue">
            <label class="FormLabel" asp-for="@Model.ImportValue"></label>
            <div class="FormValue">@Model.ImportValue</div>

            <div style="clear:both"></div>
        </section>
        <section id="importX1">
